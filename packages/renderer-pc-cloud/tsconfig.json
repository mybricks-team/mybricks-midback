{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "importHelpers": false,
    "target": "es5",
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["dom", "es6", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "checkJs": false,
    "baseUrl": "./",
    "paths": {},
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
